	    <script>
	        var pengine;
		    function query() {
	    	    var query_str=$('#query').val();
            	    var qtbl="table('"+query_str+"',Table)";
            	    // alert(qtbl);

    		    pengine = new Pengine({
    		        ask: qtbl,
    		        onsuccess: handleSuccess,
    		        onfailure: handleFailure,
    		        onerror:   handleError,
    		        src: $("#src").val()
    		    });
		    }
		    function handleSuccess() {
		        var solution = JSON.stringify(this.data);
				write(solution);
				if (!this.more) {
					write("No more solutions");
				}
		    }
		    function handleFailure() {
		        write("Failed");;
		    }
		    function handleError() {
		        write(this.data);
		    }
	    	function write(string) {
	    		$('#output').append(string + "<br />")
	    	}
	    </script>
	<script type="text/x-prolog">

            table(Query, json{rows:SortedRows}) :-
                findall(json{result:N, entity:A}, geobase(Query, N, A), Rows),
                sort(Rows, SortedRows).

        </script>
        <script>
            var template = $('#myTemplate').html();
            var compiledTemplate = Handlebars.compile(template);

            pengine = new Pengine({
                ask: atbl,
                onsuccess: applyTemplate
            })

            function applyTemplate(results) {
                var result = compiledTemplate(results.data[0].Table);
                $('body').html(result)
            }

        </script>
